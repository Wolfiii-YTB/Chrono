            animation: lapAppear 0.3s ease-out;
        }

        @keyframes lapAppear {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .lap-number {
            color: var(--text-dim);
            font-weight: 700;
