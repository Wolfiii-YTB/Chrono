<body>
    <div class="container">
        <h1>Chronom√®tre</h1>
        <p class="subtitle">Configurez votre temps de d√©part personnalis√©</p>

        <div class="chrono-card">
            <div class="display" id="display">0j 00:00:00<span class="milliseconds">.000</span></div>

            <div class="controls">
                <button class="btn-start" id="startBtn">D√©marrer</button>
                <button class="btn-pause" id="pauseBtn" disabled>Pause</button>
                <button class="btn-lap" id="lapBtn" disabled>Tour</button>
                <button class="btn-reset" id="resetBtn">R√©initialiser</button>
            </div>

            <div class="lap-times" id="lapSection" style="display: none;">
                <div class="lap-title">üìä Temps interm√©diaires</div>
                <div class="lap-list" id="lapList"></div>
            </div>

            <div class="settings">
                <div class="settings-title">‚öô Param√®tres de d√©part</div>
                <div class="input-group">
                    <div class="input-wrapper">
                        <label for="days">Jours</label>
                        <input type="number" id="days" value="0" min="0" max="9999">
                    </div>
                    <div class="input-wrapper">
                        <label for="hours">Heures</label>
                        <input type="number" id="hours" value="0" min="0" max="23">
                    </div>
                    <div class="input-wrapper">
                        <label for="minutes">Minutes</label>
                        <input type="number" id="minutes" value="0" min="0" max="59">
                    </div>
                    <div class="input-wrapper">
                        <label for="seconds">Secondes</label>
                        <input type="number" id="seconds" value="0" min="0" max="59">
                    </div>
                    <div class="input-wrapper">
                        <label for="milliseconds">Millisecondes</label>
                        <input type="number" id="milliseconds" value="0" min="0" max="999" step="1">
                    </div>
                </div>
                <button class="btn-apply" id="applyBtn">Appliquer le temps de d√©part</button>
                <p class="info-text">Le chrono commencera √† partir du temps d√©fini</p>
            </div>
        </div>
    </div>

    <script>
        let startTime = 0; // Temps de d√©part en millisecondes
        let elapsedTime = 0; // Temps √©coul√© en millisecondes
        let timerInterval = null;
        let isRunning = false;
        let lapTimes = [];
        let lastLapTime = 0;

        const display = document.getElementById('display');
        const startBtn = document.getElementById('startBtn');
        const pauseBtn = document.getElementById('pauseBtn');
        const resetBtn = document.getElementById('resetBtn');
        const lapBtn = document.getElementById('lapBtn');
        const daysInput = document.getElementById('days');
        const hoursInput = document.getElementById('hours');
        const minutesInput = document.getElementById('minutes');
        const secondsInput = document.getElementById('seconds');
        const millisecondsInput = document.getElementById('milliseconds');
        const applyBtn = document.getElementById('applyBtn');
        const lapSection = document.getElementById('lapSection');
        const lapList = document.getElementById('lapList');

        function formatTime(totalMilliseconds) {
            const totalSeconds = Math.floor(totalMilliseconds / 1000);
            const days = Math.floor(totalSeconds / 86400); // 86400 secondes par jour
            const hours = Math.floor((totalSeconds % 86400) / 3600);
            const minutes = Math.floor((totalSeconds % 3600) / 60);
            const seconds = totalSeconds % 60;
            const milliseconds = totalMilliseconds % 1000;
            
            let timeString = '';
            if (days > 0) {
                timeString += `${days}j `;
            }
            timeString += `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
            
            return timeString + `<span class="milliseconds">.${String(milliseconds).padStart(3, '0')}</span>`;
        }

        function formatTimeForLap(totalMilliseconds) {
            const totalSeconds = Math.floor(totalMilliseconds / 1000);
            const days = Math.floor(totalSeconds / 86400);
            const hours = Math.floor((totalSeconds % 86400) / 3600);
            const minutes = Math.floor((totalSeconds % 3600) / 60);
            const seconds = totalSeconds % 60;
            const milliseconds = totalMilliseconds % 1000;
            
            let result = '';
            if (days > 0) {
                result += `${days}j `;
            }
            if (hours > 0 || days > 0) {
                result += `${hours}h `;
            }
            if (minutes > 0 || hours > 0 || days > 0) {
                result += `${minutes}m `;
            }
            result += `${seconds}.${String(milliseconds).padStart(3, '0')}s`;
            
            return result;
        }

        function updateDisplay() {
            display.innerHTML = formatTime(startTime + elapsedTime);
        }

        function startTimer() {
            if (!isRunning) {
                isRunning = true;
                const startTimestamp = Date.now() - elapsedTime;
                
                timerInterval = setInterval(() => {
                    elapsedTime = Date.now() - startTimestamp;
                    updateDisplay();
                }, 10); // Mise √† jour toutes les 10ms pour fluidit√©

                startBtn.disabled = true;
                pauseBtn.disabled = false;
                lapBtn.disabled = false;
                display.classList.add('running');
            }
        }

        function pauseTimer() {
            if (isRunning) {
                isRunning = false;
                clearInterval(timerInterval);
                startBtn.disabled = false;
                pauseBtn.disabled = true;
                lapBtn.disabled = true;
                display.classList.remove('running');
                startBtn.textContent = 'Reprendre';
            }
        }

        function resetTimer() {
            isRunning = false;
            clearInterval(timerInterval);
            elapsedTime = 0;
            lapTimes = [];
            lastLapTime = 0;
            updateDisplay();
            startBtn.disabled = false;
            pauseBtn.disabled = true;
            lapBtn.disabled = true;
            display.classList.remove('running');
            startBtn.textContent = 'D√©marrer';
            lapSection.style.display = 'none';
            lapList.innerHTML = '';
        }

        function recordLap() {
            if (!isRunning) return;

            const currentTime = startTime + elapsedTime;
            const lapTime = currentTime - lastLapTime;
            lapTimes.push({
                total: currentTime,
                lap: lapTime
            });
            lastLapTime = currentTime;

            // Afficher la section des tours
            lapSection.style.display = 'block';

            // Cr√©er l'√©l√©ment de tour
            const lapItem = document.createElement('div');
            lapItem.className = 'lap-item';

            const lapNumber = document.createElement('span');
            lapNumber.className = 'lap-number';
            lapNumber.textContent = `Tour ${lapTimes.length}`;

            const lapTimeDisplay = document.createElement('span');
            lapTimeDisplay.className = 'lap-time';
            lapTimeDisplay.textContent = formatTimeForLap(lapTime);

            // Comparer avec le tour pr√©c√©dent
            if (lapTimes.length > 1) {
                const previousLapTime = lapTimes[lapTimes.length - 2].lap;
                const diff = lapTime - previousLapTime;
                const diffSpan = document.createElement('span');
                diffSpan.className = 'lap-diff';
                
                if (diff < 0) {
                    diffSpan.classList.add('faster');
                    diffSpan.textContent = `(-${formatTimeForLap(Math.abs(diff))})`;
                } else if (diff > 0) {
                    diffSpan.classList.add('slower');
                    diffSpan.textContent = `(+${formatTimeForLap(diff)})`;
                }
                
                lapItem.appendChild(lapNumber);
                lapItem.appendChild(diffSpan);
                lapItem.appendChild(lapTimeDisplay);
            } else {
                lapItem.appendChild(lapNumber);
                lapItem.appendChild(lapTimeDisplay);
            }

            // Ajouter en haut de la liste
            lapList.insertBefore(lapItem, lapList.firstChild);
        }

        function applyStartTime() {
            const days = parseInt(daysInput.value) || 0;
            const hours = parseInt(hoursInput.value) || 0;
            const minutes = parseInt(minutesInput.value) || 0;
            const seconds = parseInt(secondsInput.value) || 0;
            const milliseconds = parseInt(millisecondsInput.value) || 0;
            
            startTime = (days * 86400 * 1000) + (hours * 3600 * 1000) + (minutes * 60 * 1000) + (seconds * 1000) + milliseconds;
            lastLapTime = startTime;
            resetTimer();
            
            // Animation visuelle
            applyBtn.textContent = '‚úì Appliqu√© !';
            setTimeout(() => {
                applyBtn.textContent = 'Appliquer le temps de d√©part';
            }, 2000);
        }

        // Event listeners
        startBtn.addEventListener('click', startTimer);
        pauseBtn.addEventListener('click', pauseTimer);
        resetBtn.addEventListener('click', resetTimer);
        lapBtn.addEventListener('click', recordLap);
        applyBtn.addEventListener('click', applyStartTime);

        // Initialiser l'affichage
        updateDisplay();

        // Permettre l'application avec la touche Entr√©e
        [daysInput, hoursInput, minutesInput, secondsInput, millisecondsInput].forEach(input => {
            input.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    applyStartTime();
                }
            });
        });

        // Raccourcis clavier
        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space' && !e.target.matches('input')) {
                e.preventDefault();
                if (isRunning) {
                    pauseTimer();
                } else {
                    startTimer();
                }
            } else if (e.code === 'KeyL' && isRunning && !e.target.matches('input')) {
                e.preventDefault();
                recordLap();
            } else if (e.code === 'KeyR' && !isRunning && !e.target.matches('input')) {
                e.preventDefault();
                resetTimer();
            }
        });
    </script>
</body>
</html>
