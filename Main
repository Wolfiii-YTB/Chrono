        }

        .lap-diff.faster {
            color: #00ff88;
        }

        .lap-diff.slower {
            color: #ff6b6b;
        }

        .lap-times::-webkit-scrollbar {
            width: 8px;
        }

        .lap-times::-webkit-scrollbar-track {
